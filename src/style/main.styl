*
    margin 0
    padding 0

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    
canvas
    position absolute
    top 0
    left 0
    width 100%
    height 100%

.blocker
    position absolute
    width 100%
    height 100%
    z-index 998

.instructions
    width 100%
    height 100%
    top 50%
    left 50%
    color: #fff
	font-family: Arial
	font-size: 14px
	line-height: 24px
	cursor: pointer

.background
    width 100%
    height: 100%
    z-index 999

.background img
    width 100%
    height 100%
    object-fit cover