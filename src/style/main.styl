*
    margin 0
    padding 0

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    font-family: 'LazyMorning'
    font-weight: normal
    
canvas
    position absolute
    top 0
    left 0
    width 100%
    height 100%

.blocker
    position absolute
    width 100%
    height 100%
    z-index 998

.instructions
    width 100%
    height 100%
    top 50%
    left 50%
    color: #fff
	font-family: Arial
	font-size: 14px
	line-height: 24px
	cursor: pointer

.background
    width 100%
    height: 100%
    z-index 999
    display: flex
    justify-content: center
    align-items: center

.background img
    width 100%
    height 100%
    object-fit cover

@font-face

    font-family: 'LazyMorning'
    src:
    url('../fonts/LazyMorning.otf')
    format('opentype')

  
@font-face
  
    font-family: 'WOODCUTTER'
    src:
    url('../fonts/WOODCUTTER.ttf')
    format('truetype')


.container

    position: absolute
    width: 70%
    height: 80%
    background: rgba(0, 0, 0, 0.75) 
    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.25)
    backdrop-filter: blur(10px)
    border-radius: 30px
    display: flex
    justify-content: center


.content

    margin-top: 4%
    font-family: LazyMorning
    font-style: normal
    font-weight: normal
    font-size: 40px
    line-height: 49px
    text-align: center
    color: #FFFFFF
    display: flex
    justify-content: space-between
    flex-direction: column


.logo img

    width:200px
    height: auto
    margin-left: -420px


.logo

    width: 100%


h1

    font-family: WOODCUTTER
    font-style: normal
    font-weight: bold
    font-size: 64px
    line-height: 74px
    color: #FFFFFF
    margin-top: -190px
    margin-left: 200px


.controls

    display: flex
    justify-content: space-around
    align-items: center
    margin-left: 150px
    margin-bottom: -50px


.forward, .backward, .left, .right, .eKey, .escKey

    width: 45px
    height: 45px
    margin-left: 10px
    background: #FFFFFF
    border-radius: 5px
    color: #000
    font-weight: bold


.forward

    margin-top: -110px
    margin-left: -100px


.right

    margin-left: -150px


.wasd

    display: flex
    align-items: center
    margin-top: 50px


.move, .look, .interact, .back

    display: flex
    align-items: center


h2

    font-weight: normal
    font-size: 40px
    margin-left: 20px


.mouse

    width: 60px
    height: 90px
    border-radius: 50px
    box-shadow: 0 0 0 5px #fff
    display: flex
    justify-content: center


.wheel

    width: 5px
    height: 12px
    background-color: #fff
    border-radius: 15px
    margin-top: 20px


.start

    display: flex
    align-items: center
    justify-content: center
    margin-left: 10px
    margin-bottom: 100px


.start .eKey

    margin-right: 10px


.felyne img

    width:130px
    height: auto
    right: 50px
    bottom: 50px
    position: absolute 

p

    letter-spacing 1px
    margin-bottom -50px