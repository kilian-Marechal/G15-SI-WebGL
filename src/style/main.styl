.mapImage

    width: 100%
    height: 100%
    top:0
    right:0
    bottom:0
    left:0
    position: absolute
    transform: translateX(100%)
    display: none

.mapImage img

    width: 100%
    height: 100%


.mapImage.show

    display: block
    animation: mapSlideIn 1s forwards ease-in-out


.mapImage.hide

    display: block
    animation: mapSlideOut 1s forwards ease-in-out


@keyframes mapSlideIn

    0% {transform:translateX(100%);}

    100% {transform:translateX(0%);}


@keyframes mapSlideOut

    0% {transform:translateX(0%);}

    100% {transform:translateX(100%);}
